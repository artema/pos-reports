extends layout_base

block head
  title Internal Server Error

block body
  .container: .row: div(class='col-md-4 col-md-offset-4'): div(class='login-panel panel panel-default')
    .panel-heading: h3.panel-title Internal Server Error
    .panel-body
      div(class="alert alert-danger")
        p
          if error
            = error
          else
            | Unable to process the request. Please try again later.
      button(class="btn btn-primary btn-lg btn-block",onclick="window.location='/'"): | Proceed
