extends layout_page

block head
  title SNAP Admin
  script(src='/public/dist/panel' + (is_production ? '.min' : '') + '.js')

block menu
  div(role="navigation",class="navbar-default sidebar")
    div(class="sidebar-nav navbar-collapse", extended='extended', ng-controller='MainMenuCtrl', ng-include="'/public/partials/shared/mainmenu.html'")

block navigation
  div(ng-controller='NavigationCtrl',ng-include="'/public/partials/shared/navigation.html'")

block content
  #page-wrapper: .row
    div(ng-view)
    script(type='text/javascript').
      (function() {
        angular.bootstrap(document, ['TouchAdminPanel']);
      })();
